    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "files": [
    "dist/es",
    "dist/types",
    "dist/umd"
  ],
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "classnames": "^2.5.1"
  }
}
