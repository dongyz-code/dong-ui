{
  "name": "@dong-ui/components",
  "version": "0.0.0",
  "type": "module",
  "main": "dist/es/index.js",
  "types": "dist/es/index.d.ts",
  "scripts": {
    "dev": "vite",
    "prebuild": "rimraf dist",
    "build": "rimraf dist && vite build --config scripts/es.build.ts && pnpm run build:tsc-es",
