{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["ESNext", "DOM"]
  },
  "include": ["src/**/*", "shims-vue.d.ts"],
  "exclude": ["node_modules", "**/__tests__/**"]
}
